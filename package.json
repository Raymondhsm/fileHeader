{
	"name": "fileHeader",
	"displayName": "xiaomingHeader",
	"description": "在vscode中用于生成文件头部注释和函数注释的插件,目前仅开发基本功能，敬请期待！",
  	"version": "1.0.0",
  	"publisher": "HSMing",
	"engines": {
		"vscode": "^1.34.0"
	},
	"categories": [
		"Other"
	],
	"keywords": [
		"xiaomingfileheader",
		"comment",
		"annotation",
		"注释",
		"文件注释",
		"头部注释",
		"函数注释",
		"作者注释",
		"fileheader",
		"xiaoming-fileheader",
		"Document This"
	  ],
	"activationEvents": [
		"onCommand:extension.fileHeader",
		"onCommand:extension.funHeader",
		"onCommand:extension.authorHeader"
	],
	"main": "./src/extension.js",
	"contributes": {
		"commands": [
			{
				"command": "extension.fileHeader",
				"title": "setFileHeader"
			},

			{
				"command": "extension.funHeader",
				"title": "setFunHeader"
			},

			{
				"command": "extension.authorHeader",
				"title": "setAuthorHeader"
			}
		],

		"keybindings": [
			{
				"command": "extension.fileHeader",
				"key": "ctrl+alt+i",
				"mac": "ctrl+cmd+i",
        		"when": "editorTextFocus"
			},
	
			{
				"command": "extension.funHeader",
				"key": "ctrl+alt+o",
				"mac": "ctrl+cmd+o",
      			"when": "editorTextFocus"
			},
	
			{
				"command": "extension.authorHeader",
				"key": "ctrl+alt+p",
				"mac": "ctrl+cmd+p",
        		"when": "editorTextFocus"
			}
		],

		"configuration":{
			"type": "object",
			"title": "file header configuration",

			"properties": {
				"fileheader.userInfo":{
					"type": "object",
					"default": {
						"name": "your name"
					},
					"description": "set the user information"
				},

				"fileheader.projectSetting":{
					"type":"object",
					"default":{

					},
					"description": "set some project selection"
				}
			}
		}
	},
	"scripts": {
		"postinstall": "node ./node_modules/vscode/bin/install",
		"test": "node ./node_modules/vscode/bin/test"
	},
	"devDependencies": {
		"typescript": "^3.3.1",
		"vscode": "^1.1.28",
		"eslint": "^5.13.0",
		"@types/node": "^10.12.21",
		"@types/mocha": "^2.2.42"
	}
}
